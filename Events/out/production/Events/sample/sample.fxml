<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="3"
               onKeyReleased="#onKeyReleased"/>
    <Button fx:id="helloButton" text="Hello" GridPane.rowIndex="1" GridPane.columnIndex="0"
            onAction="#sayHello"/>
    <Button fx:id="byeButton" text="Byee" GridPane.rowIndex="1" GridPane.columnIndex="1"
            onAction="#sayHello"/>
    <Label fx:id="outputLabel" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="3"/>
    <CheckBox fx:id="clearCheckBox" text="Clear after button press" GridPane.rowIndex="3" GridPane.columnIndex="0"
              GridPane.columnSpan="2" onAction="#handleChange"/>
</GridPane>